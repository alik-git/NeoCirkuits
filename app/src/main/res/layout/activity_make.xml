<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/activity_make">

    <Button
        android:text="CIRCUIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_circuit"
        android:onClick="testCircuit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="PATH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/test_circuit"
        android:layout_toRightOf="@+id/test_circuit"
        android:layout_toEndOf="@+id/test_circuit"
        android:id="@+id/test_path"
        android:onClick="testPath" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boundary_button"
        android:onClick="toggleBoundary"
        android:textOn="Boundary On"
        android:textOff="Boundary Off"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <Button
        android:text="UNDO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:id="@+id/undo_button"
        android:onClick="undo" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/test_path"
        android:layout_toStartOf="@+id/test_path"
        android:id="@+id/save_button"
        android:onClick="save" />

    <Button
        android:text="LOAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/load_button"
        android:onClick="load"
        android:layout_below="@+id/undo_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/better_load_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/load_button"
        android:layout_alignRight="@+id/load_button"
        android:layout_below="@+id/load_button"
        android:layout_marginTop="11dp"
        android:text="B Load"
        android:onClick="better_load"
        android:textStyle="italic" />

</RelativeLayout>