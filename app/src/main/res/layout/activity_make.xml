<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/activity_make">

    <Button
        android:text="CIRCUIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/test_circuit"
        android:onClick="testCircuit" />

    <Button
        android:text="PATH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/test_circuit"
        android:layout_toRightOf="@+id/test_circuit"
        android:layout_toEndOf="@+id/test_circuit"
        android:id="@+id/test_path"
        android:onClick="testPath" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boundary_button"
        android:onClick="toggleBoundary"
        android:textOn="Boundary On"
        android:textOff="Boundary Off"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <Button
        android:text="UNDO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:id="@+id/undo_button"
        android:onClick="undo" />

</RelativeLayout>