<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Neon" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@color/neon_green</item>
        <item name="colorAccent">@color/neon_green</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondary">@color/neon_green</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
    </style>

    <style name="aaaToggleButton" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimaryDark">@color/redAF</item>
        <item name="colorAccent">@color/redAF</item>
        <item name="android:textColorPrimary">@color/redAF</item>
        <item name="android:textColorSecondary">@color/redAF</item>
        <item name="colorPrimary">@color/redAF</item>
    </style>

</resources>
